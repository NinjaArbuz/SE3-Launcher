{
    "name": "se3-launcher",
    "description": "Launcher for Space Eternity 3",
    "version": "3.0.0-alpha.3",
    "private": true,
    "homepage": "./",
    "main": "index.js",
    "author": {
        "name": "Nadwey",
        "url": "https://github.com/Nadwey/"
    },
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^7.2.2",
        "cross-env": "^7.0.3",
        "electron": "^19.0.7",
        "electron-builder": "^23.1.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-scripts": "^5.0.1",
        "wait-on": "^6.0.1"
    },
    "scripts": {
        "start": "concurrently --kill-others \"cross-env BROWSER=none react-scripts start\" \"electron .\"",
        "react-build": "react-scripts build",
        "electron-build": "electron-builder --win --ia32 --publish=never && electron-builder --win --x64 --publish=never",
        "build": "npm run react-build && npm run electron-build"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "@6c65726f79/custom-titlebar": "^0.9.1",
        "@electron/remote": "^2.0.8",
        "@mantine/core": "^4.2.12",
        "@mantine/hooks": "^4.2.12",
        "@mantine/modals": "^4.2.12",
        "@mantine/next": "^4.2.12",
        "@mantine/notifications": "^4.2.12",
        "appdata-path": "^1.0.0",
        "axios": "^0.27.2",
        "decompress": "^4.2.1",
        "electron-is": "github:Nadwey/electron-is",
        "electron-store": "^8.0.2",
        "electronbb": "^1.0.0-beta.3",
        "github-markdown-css": "^5.1.0",
        "lodash": "^4.17.21",
        "react-markdown": "^8.0.3",
        "remark-gfm": "^3.0.1"
    },
    "build": {
        "productName": "SE3 Launcher",
        "extends": null,
        "icon": "../resources/ikona.ico",
        "files": [
            "**/*",
            "!.github/",
            "!src/",
            "!resources/",
            "!public/",
            "!debugConfig.js",
            "!.prettierrc",
            "node_modules/",
            "build/"
        ],
        "win": {
            "target": [
                "nsis",
                "zip"
            ],
            "artifactName": "SE3 Launcher-${version}-${os}-${arch}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "resources/ikona.ico",
            "deleteAppDataOnUninstall": true,
            "installerSidebar": "../resources/Sidebar.bmp",
            "differentialPackage": false
        }
    }
}
